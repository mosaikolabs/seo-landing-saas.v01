---
// src/components/landing/HeroSection.astro
import Button from '../ui/Button.astro';
import Modal from '../ui/Modal.astro';

const {
  preHeadline = 'Software SAAS para Joyerías',
  headline = 'Transforme Su Joyería en la #1 de Su Ciudad en Solo 90 Días',
  headlineSecondary = '',
  subheadline = 'El mismo software que usó Joyería Luna Dorada para pasar de 8 a 47 joyas vendidas por mes en 6 meses - sin contratar publicistas',
  primaryCta = 'VER MI ANÁLISIS COMPETITIVO GRATUITO',
  secondaryCta = 'Ver casos de éxito',
  featuredImage = '/src/assets/images/hero/pareja.png',
  stats = [
    { value: '47', label: 'Joyas vendidas/mes' },
    { value: '90', label: 'Días para resultados' },
    { value: '15', label: 'Clientes nuevos/semana' },
  ],
} = Astro.props || {};
---

<section id="inicio" class="relative bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
      {/* Fondo decorativo */}
      <svg
        class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white transform translate-x-1/2"
        fill="currentColor"
        viewBox="0 0 100 100"
        preserveAspectRatio="none"
        aria-hidden="true"
      >
        <polygon points="50,0 100,0 50,100 0,100" class="text-gray-50" />
      </svg>

      {/* Contenido principal */}
      <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <div class="hero-container">
          <div class="hero-content">
            {/* Eyebrow */}
            <div class="eyebrow mb-6">
              <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-primary/10 text-primary">
                {preHeadline}
              </span>
            </div>
            
            {/* Título principal */}
            <h1 class="headline text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl lg:leading-tight">
              Transforme Su Joyería en la 
              <span class="text-primary">#1 de Su Ciudad</span>
              en Solo 90 Días
            </h1>
            
            {/* Subtítulo */}
            <p class="subheadline mt-4 text-lg text-gray-600 sm:mt-6 sm:text-xl max-w-2xl">
              {subheadline}
            </p>
            
            {/* Badge de característica */}
            <div class="software-badge mt-6 flex items-center text-base font-medium text-green-700 bg-green-50 px-4 py-3 rounded-lg">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Software 100% Automatizado - Sin Curva de Aprendizaje
            </div>
            
            {/* Botones CTA */}
            <div class="cta-container mt-8 flex flex-col sm:flex-row gap-4">
              <Button 
                variant="primary" 
                size="lg" 
                data-modal-trigger="contact-modal"
                class="cta-primary w-full sm:w-auto justify-center px-8 py-4 text-base font-medium"
              >
                {primaryCta}
              </Button>
              
              {secondaryCta && (
                <Button 
                  variant="outline" 
                  size="lg"
                  href="#como-funciona"
                  class="cta-secondary w-full sm:w-auto justify-center px-8 py-4 text-base font-medium"
                >
                  {secondaryCta}
                </Button>
              )}
            </div>
            
            {/* Badge de garantía */}
            <div class="guarantee-badge mt-6 bg-yellow-50 text-yellow-800 text-sm font-medium px-4 py-3 rounded-lg border border-yellow-200">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
                <span>GARANTÍA: Resultados en 90 días o le devolvemos todo + $500</span>
              </div>
            </div>
            
            {/* Estadísticas */}
            {stats && stats.length > 0 && (
              <div class="metrics mt-10 grid grid-cols-3 gap-6 max-w-lg">
                {stats.map((stat, index) => (
                  <div id={`stat-${index}`} class="metric text-center">
                    <div class="metric-number text-3xl font-bold text-primary">{stat.value}</div>
                    <div class="metric-label mt-1 text-sm font-medium text-gray-600">{stat.label}</div>
                  </div>
                ))}
              </div>
            )}
          </div>
        </div>
      </main>
    </div>
  </div>
  
  {/* Imagen destacada - Versión optimizada */}
  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    <div class="relative h-full w-full">
      <picture>
        {/* Fuentes AVIF - Formato más moderno y eficiente */}
        <source 
          type="image/avif"
          srcSet="/optimized/reference1-320w.avif 320w,
                  /optimized/reference1-640w.avif 640w,
                  /optimized/reference1-1024w.avif 1024w,
                  /optimized/reference1-1440w.avif 1440w,
                  /optimized/reference1-1920w.avif 1920w"
          sizes="(max-width: 640px) 100vw,
                 (max-width: 1024px) 50vw,
                 33vw"
        />
        {/* Fuentes WebP - Amplio soporte y buena compresión */}
        <source 
          type="image/webp"
          srcSet="/optimized/reference1-320w.webp 320w,
                  /optimized/reference1-640w.webp 640w,
                  /optimized/reference1-1024w.webp 1024w,
                  /optimized/reference1-1440w.webp 1440w,
                  /optimized/reference1-1920w.webp 1920w"
          sizes="(max-width: 640px) 100vw,
                 (max-width: 1024px) 50vw,
                 33vw"
        />
        {/* Imagen de respaldo para navegadores antiguos */}
        <img 
          src="/optimized/reference1-1920w.png" 
          alt="Joyería destacada"
          class="h-full w-full object-cover object-center"
          loading="eager"
          width="1920"
          height="1280"
          decoding="async"
        />
      </picture>
      
      {/* Badge de garantía */}
      <div class="absolute bottom-8 right-8 bg-green-50 text-green-800 text-sm font-semibold px-4 py-2 rounded-lg shadow-lg">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
          </svg>
          <span>GARANTÍA: Resultados en 90 días o le devolvemos todo + $500</span>
        </div>
      </div>
    </div>
  </div>
  
  {/* Formulario de análisis SEO en modal */}
  <Modal 
    id="seo-analysis-modal"
    title="Obtenga un análisis SEO GRATIS de $497"
    description="Complete el siguiente formulario para recibir su análisis SEO personalizado sin costo."
    size="lg"
  >
    <form id="seo-analysis-form" class="mt-6 space-y-4">
      <div>
        <label for="website" class="block text-sm font-medium text-gray-700">Sitio web <span class="text-red-500">*</span></label>
        <div class="mt-1">
          <input 
            type="url" 
            name="website" 
            id="website" 
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary"
            placeholder="https://tujoyeria.com"
          >
        </div>
      </div>
      
      <div>
        <label for="keywords" class="block text-sm font-medium text-gray-700">
          10 palabras clave deseadas <span class="text-red-500">*</span>
          <span class="block text-xs text-gray-500 font-normal mt-1">Separe las palabras clave con comas</span>
        </label>
        <div class="mt-1">
          <textarea 
            name="keywords" 
            id="keywords" 
            rows="4"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary"
            placeholder="ejemplo: anillos de compromiso, joyería fina, relojes de lujo..."
          ></textarea>
        </div>
      </div>
      
      <div>
        <label for="social_media" class="block text-sm font-medium text-gray-700">Redes sociales (opcional)</label>
        <div class="mt-1">
          <input 
            type="text" 
            name="social_media" 
            id="social_media" 
            class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary"
            placeholder="@tujoyeria (Instagram, Facebook, etc.)"
          >
        </div>
      </div>
      
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Correo electrónico para entrega del análisis <span class="text-red-500">*</span></label>
        <div class="mt-1">
          <input 
            type="email" 
            name="email" 
            id="email" 
            required 
            class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary"
            placeholder="tucorreo@ejemplo.com"
          >
        </div>
      </div>
      
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <input 
            id="privacy" 
            name="privacy" 
            type="checkbox" 
            required
            class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded"
          >
        </div>
        <div class="ml-3 text-sm">
          <label for="privacy" class="text-gray-700">
            Acepto la <a href="/politica-privacidad" class="text-primary hover:text-primary/80">Política de Privacidad</a> y el tratamiento de mis datos
          </label>
        </div>
      </div>
      
      <div id="form-message" class="hidden p-3 mt-4 text-sm rounded-md"></div>
      
      <div class="pt-2">
        <Button 
          type="submit" 
          variant="primary" 
          class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
          id="submit-btn"
        >
          <span class="flex items-center">
            <span>Enviar para recibir mi análisis GRATIS</span>
            <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </span>
        </Button>
      </div>
    </form>
  </Modal>
</section>

<script>
  // Declarar tipos para TypeScript
  interface Window {
    openModal: (modalId: string) => void;
    closeModal: (modalId: string) => void;
  }

  // Funciones para manejar modales
  window.openModal = function(modalId: string) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  };

  window.closeModal = function(modalId: string) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }
  };

  // Cerrar modal al hacer clic fuera del contenido
  document.addEventListener('click', (e: MouseEvent) => {
    const target = e.target as HTMLElement;
    if (target && target.classList.contains('modal-overlay')) {
      const modal = target.closest('.modal');
      if (modal) {
        window.closeModal(modal.id);
      }
    }
  });

  // Cerrar modal con tecla ESC
  document.addEventListener('keydown', (e: KeyboardEvent) => {
    if (e.key === 'Escape') {
      const openModal = document.querySelector('.modal:not(.hidden)') as HTMLElement;
      if (openModal) {
        window.closeModal(openModal.id);
      }
    }
  });

  // Inicialización cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    // Abrir modal al hacer clic en el botón con data-modal-trigger
    document.querySelectorAll<HTMLElement>('[data-modal-trigger]').forEach(trigger => {
      trigger.addEventListener('click', (e: Event) => {
        e.preventDefault();
        const modalId = trigger.getAttribute('data-modal-trigger');
        if (modalId) {
          window.openModal(modalId);
        }
      });
    });
    
    // Validación del formulario
    const form = document.getElementById('seo-analysis-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const formMessage = document.getElementById('form-message');
    
    if (form && submitBtn && formMessage) {
      form.addEventListener('submit', async (e: SubmitEvent) => {
        e.preventDefault();
        
        // Mostrar estado de carga
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="flex items-center justify-center"><svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Enviando...</span>';
        
        // Ocultar mensajes anteriores
        formMessage.classList.add('hidden');
        
        // Validar formulario
        if (!form.checkValidity()) {
          form.reportValidity();
          submitBtn.disabled = false;
          submitBtn.innerHTML = 'Enviar para recibir mi análisis GRATIS';
          return;
        }
        
        // Obtener los datos del formulario
        const formData = new FormData(form);
        const data = {
          website: formData.get('website'),
          keywords: formData.get('keywords'),
          social_media: formData.get('social_media'),
          email: formData.get('email'),
          timestamp: new Date().toISOString()
        };
        
        // Enviar los datos al webhook de make.com
        try {
          // Reemplaza 'YOUR_MAKE_WEBHOOK_URL' con tu URL de webhook real de make.com
          const response = await fetch('https://hook.us1.make.com/YOUR_MAKE_WEBHOOK_URL', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          });
          
          if (response.ok) {
            // Mostrar mensaje de éxito
            formMessage.textContent = '✅ ¡Gracias! Hemos recibido tu solicitud. Te enviaremos el análisis a tu correo electrónico en breve.';
            formMessage.className = 'bg-green-100 text-green-700 p-3 rounded-md';
            formMessage.classList.remove('hidden');
            
            // Resetear formulario
            form.reset();
            
            // Cerrar el modal después de 3 segundos
            setTimeout(() => {
              window.closeModal('seo-analysis-modal');
              // Restaurar mensaje después de cerrar
              setTimeout(() => {
                formMessage.classList.add('hidden');
              }, 500);
            }, 3000);
          } else {
            throw new Error(`Error HTTP: ${response.status}`);
          }
        } catch (error) {
          console.error('Error al enviar el formulario:', error);
          formMessage.textContent = '❌ Hubo un error al enviar el formulario. Por favor, inténtalo de nuevo más tarde.';
          formMessage.className = 'bg-red-100 text-red-700 p-3 rounded-md';
          formMessage.classList.remove('hidden');
        } finally {
          // Restaurar botón
          submitBtn.disabled = false;
          submitBtn.innerHTML = 'Enviar para recibir mi análisis GRATIS';
        }
      });
    }
  });
</script>

<style>
  /* Animación suave para la sección hero */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Aplicar animación al contenido */
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  /* Ajustes responsivos para la imagen */
  @media (max-width: 1024px) {
    .hero-image-container {
      height: 400px;
    }
  }
  
  /* Mejoras de accesibilidad para el foco */
  button:focus, 
  [role="button"]:focus,
  a:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
  
  /* Efecto hover para los botones */
  .btn-hover-effect {
    transition: all 0.3s ease;
  }
  
  .btn-hover-effect:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
</style>
