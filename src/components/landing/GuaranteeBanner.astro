---
// src/components/landing/GuaranteeBanner.astro
import Button from '../ui/Button.astro';

const {
  title = 'GARANTÍA LOCO: Obtenga Resultados o Le Pagamos $500',
  subtitle = 'Estamos TAN SEGUROS de que su joyería aparecerá en las primeras posiciones de Google que asumimos TODO el riesgo',
  guarantees = [
    {
      icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
      title: '60 Días de Prueba',
      description: 'Tiene 60 días completos para probar nuestro servicio sin riesgo alguno.'
    },
    {
      icon: 'M5 13l4 4L19 7',
      title: 'Garantía de Resultados',
      description: 'Si no conseguimos que al menos 15 personas busquen específicamente su joyería en Google en 60 días...'
    },
    {
      icon: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
      title: 'Le Devolvemos Su Dinero',
      description: '1. Le devolvemos CADA CENTAVO que nos pagó, sin preguntas.'
    },
    {
      icon: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
      title: 'Y Le Pagamos $500',
      description: '2. Le pagamos $500 adicionales por las molestias ocasionadas.'
    },
    {
      icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
      title: 'Sin Letra Pequeña',
      description: 'Sin trucos. Sin letra pequeña. Sin condiciones ocultas.'
    },
    {
      icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01',
      title: 'Pago por Resultados',
      description: 'Parte de nuestra compensación está directamente vinculada al rendimiento de su sitio.'
    },
  ],
  ctaText = 'Quiero Mi Garantía de Resultados',
  ctaLink = '#contacto',
  badgeText = 'Obtenga $500 si no funciona',
} = Astro.props;

---

<section id="garantia" class="relative bg-gradient-to-r from-primary/5 to-primary/10 py-16 overflow-hidden">
  {/* Elementos decorativos de fondo */}
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[url('/images/patterns/pattern.svg')] bg-center"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {/* Badge destacado */}
    <div class="flex justify-center mb-8">
      <span class="inline-flex items-center px-4 py-1.5 rounded-full text-sm font-medium bg-primary text-white">
        <svg class="-ml-1 mr-1.5 h-2 w-2 text-white" fill="currentColor" viewBox="0 0 8 8">
          <circle cx="4" cy="4" r="3" />
        </svg>
        {badgeText}
      </span>
    </div>
    
    {/* Encabezado */}
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        {title}
      </h2>
      <p class="mt-4 max-w-2xl text-xl text-gray-700 mx-auto">
        {subtitle}
      </p>
    </div>
    
    {/* Grid de garantías */}
    <div class="mt-16">
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {guarantees.map((guarantee, index) => (
          <div 
              id={`guarantee-${index}`}
              class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 flex flex-col h-full"
            >
            <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-md bg-primary/10 text-primary">
              <svg 
                class="h-6 w-6" 
                xmlns="http://www.w3.org/2000/svg" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
                aria-hidden="true"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d={guarantee.icon} 
                />
              </svg>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">
              {guarantee.title}
            </h3>
            <p class="mt-2 text-base text-gray-600 flex-grow">
              {guarantee.description}
            </p>
          </div>
        ))}
      </div>
    </div>
    
    {/* Llamada a la acción */}
    <div class="mt-16 text-center">
      <div class="inline-flex rounded-md shadow">
        <div class="mt-8 text-center">
            <a 
              href={ctaLink}
              class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary md:py-4 md:text-lg md:px-10"
            >
              {ctaText}
            </a>
          </div>
      </div>
      
      <p class="mt-4 text-sm text-gray-600">
        Sin compromisos a largo plazo. Cancele en cualquier momento.
      </p>
    </div>
  </div>
</section>

<style>
  /* Animaciones */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  /* Efecto de flotación para las tarjetas */
  .guarantee-card {
    transition: all 0.3s ease;
    animation: float 6s ease-in-out infinite;
  }
  
  /* Retrasos escalonados para la animación */
  .guarantee-card:nth-child(1) { animation-delay: 0s; }
  .guarantee-card:nth-child(2) { animation-delay: 1s; }
  .guarantee-card:nth-child(3) { animation-delay: 2s; }
  .guarantee-card:nth-child(4) { animation-delay: 0.5s; }
  .guarantee-card:nth-child(5) { animation-delay: 1.5s; }
  .guarantee-card:nth-child(6) { animation-delay: 2.5s; }
  
  /* Efecto hover */
  .guarantee-card:hover {
    animation: none;
    transform: translateY(-5px) !important;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  /* Mejoras de accesibilidad */
  .guarantee-card:focus-within {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    border-radius: 0.5rem;
  }
  
  /* Patrón de fondo sutil */
  .guarantee-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29-22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%233b82f6' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
    opacity: 0.6;
  }
  
  /* Ajustes responsivos */
  @media (max-width: 768px) {
    .guarantee-card {
      animation: none;
    }
    
    .guarantee-card:hover {
      transform: none !important;
    }
  }
</style>

<script>
  // Agregar animaciones al hacer scroll
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.guarantee-card').forEach((card, index) => {
      const element = card as HTMLElement;
      element.style.animationDelay = `${index * 0.1}s`;
      
      // Efecto hover
      card.addEventListener('mouseenter', () => {
        element.style.transform = 'translateY(-5px)';
      });
      
      card.addEventListener('mouseleave', () => {
        element.style.transform = 'translateY(0)';
      });
    });  
    
    // Agregar animación al badge
    const badge = document.querySelector('.guarantee-badge');
    if (badge) {
      badge.style.animation = 'pulse 2s infinite';
    }
  });
</script>
